<article>
  <div class="case-study-page">

    <div class="title-body">
      <h1 class="title">
        <%= @case_study_page.fields.seo_title %>
      </h1>
      <h2 class="sub-title">
        <%= @case_study_page.fields.interviewed_person_title %>
      </h2>
      <p class="company">
        Company:
        <%= @case_study_page.fields.company_name %>
      </p>
      <p class="interviewed-person">
        Interviewed person:
        <%= @case_study_page.fields.interviewed_person_name %>
      </p>
    </div>

    <div class="body">
      <% unless @case_study_page.fields.case_study_quote.blank? %>
        <p class="quote">
          <%= @case_study_page.fields.case_study_quote %>
        </p>
      <% end %>
      <div class="main-column">

        <%= @case_study_page.fields.case_study_body.gsub(/\n/, '<br />').html_safe %>

        <%= link_to "Download PDF", @case_study_page.fields.pd_fdoc, :class => "download-btn" %>

        <div class="wide-wrapper">
          <%= render 'buttercms/newsletter' %>
          <%= render 'buttercms/request_demo' %>
        </div>

      </div>
    </div>
  </div>
</article>
