    .modal-content
      .web-form-modal
        button.close.py-2.px-3.mt-1.mr-1 aria-label="Close" data-dismiss="modal" type="button"
          span aria-hidden="true"  &times;
        .col-md-8.col-lg-6.offset-md-2.offset-lg-3.mt-5
          .row
            .title.my-3.mx-auto Contact MightySignal
