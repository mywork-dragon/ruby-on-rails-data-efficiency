#large-header.jumbotron
  .container.app-header
    canvas#demo-canvas
    .app-header-main.col-md-10.col-xs-12
      img.app-logo.lg-logo.hidden-xs src=@app['icon_url']
      .header-info
        h1#app-name
          .app-logo.sm-logo.visible-xs-inline
            img src=@app['icon_url']
          = @app['name']
        h3 = @app['publisher_name']
        .app-header-details
          .col-xs-12
            | Platform: #{@app['platform'] == 'ios' ? 'iOS' : 'Android'}
          .col-xs-12
            | App ID: #{@app['app_identifier']}
          .col-xs-12
            | Price: #{@app['price']}
          .col-xs-12
            | Category: #{@app['categories'].map{ |c| c[:name]}.join(', ')}
          - if @app['taken_down']
            .col-xs-12.taken-down-label
              span.label.label-warning
                | App is no longer available in the app store
    .app-store-button.col-md-2.col-xs-12
      a{href="#{@app['app_store_url']}" target='_blank'}
        button.btn.btn-primary
          | View in App Store
.white-panel
  .container.sdk-panel
    .sdk-total-container.col-md-12
      - if @app['last_scanned_date'].present?
        .sdk-total
          .total.installed
            i.fas.fa-cubes
            = @app['installed_sdks_count']
          | SDKs Installed

        .sdk-total
          .total.uninstalled
            i.fas.fa-cubes
            = @app['uninstalled_sdks_count']
          | SDKs Uninstalled
        .sdk-total.last-scanned
          | Last Scanned: "#{ time_ago_in_words(@app['last_scanned_date']) } ago"
      - else 
        .sdk-total.no-data
          .total.installed
            i.fas.fa-cubes
            | No SDK Data
      = render 'contact_us_button', title: 'Scan This App for SDKs', button_id: 'app-page-live-scan'
    .col-md-7
      - if @app['installed_sdk_categories'].present?
        .col-md-6.col-xs-12
          h4 Installed SDKs
          - @app['installed_sdk_categories'].each do |category, val|
            li.sdk-li
              i.far.fa-check-circle
              = "#{category} (#{val['count']})"
              - if val['recently_updated']
                span data-toggle="tooltip" data-placement="top" data-trigger="hover" title="Installed in the last month"
                  i.fas.fa-exclamation-circle.tooltip-icon
      - if @app['uninstalled_sdk_categories'] or @app['installed_sdk_categories']
        .col-md-6.col-xs-12
          - if @app['uninstalled_sdk_categories']
            h4 Uninstalled SDKs
            - @app['uninstalled_sdk_categories'].each do |category, val|
            li.sdk-li
              i.far.fa-times-circle
              = "#{category} (#{val['count']})"
              - if val['recently_updated']
                span data-toggle="tooltip" data-placement="top" data-trigger="hover" title="Uninstalled in the last month"
                  i.fas.fa-exclamation-circle.tooltip-icon
        .see-sdks-container
          = render 'contact_us_button', title: 'See More SDKs', button_id: 'app-page-see-individual-sdks'

.gray-panel
  .container.app-description
    .description-container.col-md-6.col-xs-12
      h3 Description
      .description-body
        = @app['description']
    - if @app['publisher_id']
      .col-md-6.col-xs-12
      .publisher-panel
        h4 Publisher: #{@app['publisher_name']}
        .pub-app.s-title
          | Number of Apps: #{app['publisher_number_of_apps']}, including
        .pub-apps
          -  @app['publisher_top_app'].each do |app|
            <a class="app-logo-link" href="#{ app['public_link'] }
              <img class="app-logo sm-logo" src="#{ app['icon_url'] }" alt="#{ app['name'] }">
            </a>
        | Latest Update/Release: #{ @app['publisher_last_updated_app']} days ago

.white-panel
  .container.app-details
    .col-md-12
      .details-row
        .detail-item.
          h4 Rating:
          .big-num
            - if @app['all_version_rating'] != 'No Rating'
              i.fas.fa-star
            = @app['all_version_rating'].present?
          - if @app['all_version_rating'] != 'No Rating'
            | Based on #{@app['all_version_ratings_count'] } ratings
        - if @app['latest_update_date'].present?
          .detail-item
          h4 Last Update
          .big-num
            = @app['latest_version'] || @app['latest_update_date']
          - if @app['latest_version'].present?
            | Released #{ @app['latest_update_date'] }
        .detail-item
          h4 Requested Permissions:
          - if @app['permissions_count'].present?
            .big-num
              i.fas.fa-mobile-alt
              = @app['permissions_count']
            = render 'contact_us_button', title: 'See which permissions', button_id: 'app-page-permissions-data'
          - else
            .big-num
              | No data
      .details-row
        .detail-item
          h4 User Base
          .solo-icon
            i.fas.fa-users
          = render 'contact_us_button', title: 'See user bases by country', button_id: 'app-page-userbase-data'
        .detail-item.no-border
          h4 Firmographic Data
          .solo-icon
            i.fas.fa-globe
          = render 'contact_us_button', title: 'See location, contacts, and more', button_id: 'app-page-firmographic-data'